<idea-plugin>
    <id>com.alvincezy.TinyPic2</id>
    <name>Tinify Picture</name>
    <version>1.0.3-SNAPSHOT</version>
    <vendor email="alvince.zy@gmail.com"
            url="https://github.com/alvince/IDEA-Pic-Tinify">
        alvince
    </vendor>

    <description><![CDATA[
      <h1>Tinify Picture</h1>
      <br/>
      <b>
      <a href="https://github.com/alvince/TinyPic2">Home Page</a> |
      <a href="https://github.com/alvince/TinyPic2">GitHub</a> |
      <a href="https://github.com/alvince/TinyPic2/issues">Issues</a>
      </b>
      <!--<a href="https://plugins.jetbrains.com/idea/plugin/8579">Plugin Page</a> |-->
      <br/>
      <br/>

      Compress images with TinyPng api.
      <br/>
      <br/>
      üëÅÔ∏è‚ÄçÔ∏è Website <a href="https://tinypng.com">https://tinypng.com</a>
      <br/>
      <br/>
      <i>Compiled with Java 1.8 and Kotlin 1.1</i>
    ]]></description>

    <change-notes><![CDATA[
      <h3>1.0.3 - Optimize processing tinify</h3>
      <h3>1.0.2 - Shrink plugin size</h3>
      <h3>1.0.1 - Fix compat android studio</h3>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->

    <depends>com.intellij.modules.lang</depends>


    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable instance="com.alvincezy.tinypic2.TinyPicOptionsConfigurable"/>
        <applicationService serviceInterface="com.alvincezy.tinypic2.Preferences"
                            serviceImplementation="com.alvincezy.tinypic2.Preferences"/>
    </extensions>

    <project-components>
        <component>
            <implementation-class>com.alvincezy.tinypic2.components.TinifyComponent</implementation-class>
        </component>
    </project-components>

    <actions>
        <action class="com.alvincezy.tinypic2.actions.TinyPicUploadAction"
                id="$PicTinify.TinyPicUploadAction"
                text="Select files and tinify"
                icon="/icons/ic_pic_select.png">
        </action>

        <group id="PicTinify.ActionToolbar" text="Picture Tinify Toolbar Actions">
            <separator/>
            <reference ref="$PicTinify.TinyPicUploadAction"/>
            <separator/>
            <add-to-group group-id="MainToolBar" anchor="last"/>
        </group>
    </actions>

</idea-plugin>
